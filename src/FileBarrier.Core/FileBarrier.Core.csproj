<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <PackageId>FileBarrier.Core</PackageId>
    <Version>6.0.0</Version>
    <AssemblyVersion>6.0.0.0</AssemblyVersion>
    <FileVersion>6.0.0.0</FileVersion>
    <Authors>SA.Developer</Authors>
    <Company>None</Company>

    <Title>File Barrier</Title>
    <Description>
      This library helps you decide the allowed files in your system by letting the file go through specific checks (filtering layers) before doing anything to the file. It supports four layers of checking including MimeTypes, and Content-Types.

      Usage: YOUR_IFormFile.IsFileAllowed(ARGS);
    </Description>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageTags>file filter core mimetype contenttype</PackageTags>
    <PackageReleaseNotes>- Moving to .NET 6.0.</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\FileBarrier.Core.xml</DocumentationFile>
    <OutputPath>bin\Release\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http.Features" Version="5.0.17" />
  </ItemGroup>
</Project>